<main>
    <h2 class="page-name">New <%= @band.name %> album!</h2>
    <form action="<%= albums_url %>" method="post" class="flex-column">
        <%= auth_token %>
        <div class="flex">
            <label for="title">Name</label>
            <input type="text" id="title" name="album[title]">
        </div>
        <div class="flex">
            <label for="band">Band</label>
            <select name="album[band_id]" id="band">
                <% Band.all.each do |b| %>
                    <option value="<%= b.id %>" <%= "selected" if b.id == @band.id %>>
                        <%= b.name %> 
                    </option>
                <% end %>
            </select>
        </div>
        <div class="flex">
            <label for="live">Live</label>
            <input type="radio" id="live" name="album[studio]" value="false">
            <label for="studio">Studio</label>
            <input type="radio" id="studio" name="album[studio]" value="true" checked>
        </div>
        <div class="flex">
            <label for="year">Year</label>
            <input type="number" id="year" name="album[year]" value="">
        </div>
        <input type="submit" value="Create Album!" class="button submit">
        
    </form>
</main>