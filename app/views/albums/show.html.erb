<main>
    <h2 class="page-name"><%= @album.title %></h2>
    <section>
        <ul>
            <% @album.tracks.each do |track| %>
                <li><%= link_to track.title, track_url(track) %></li>
            <% end %>
        </ul>
    </section>
    <section>
        <h3>Links</h3>
        <nav>
            <a href="<%= new_album_track_url(@album) %>" class="button">New Track</a>
            <a href="<%= edit_album_url %>" class="button">Edit Album</a>
            <form action="<%= album_url(@album) %>" method="post" class="delete-button">
                <%= auth_token %>
                <input type="hidden" name="_method" value="delete">
                <input type="submit" value="Destroy Album" class="button">
            </form>
            <a href="<%= band_url(@album.band) %>" class="button">Back to <%= @album.band.name %></a>
        </nav>
    </section>
</main>