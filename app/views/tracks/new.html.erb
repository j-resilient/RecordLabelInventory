<main>
    <h2 class="page-name">New <%= @album.title %> Track</h2>
    <form action="<%= tracks_url %>" method="post" class="flex-column class="flex"">
        <%= auth_token %>
        <div class="flex">
            <label for="title">Name</label>
            <input type="text" id="title" name="track[title]">
        </div>
        <div class="flex">
            <label for="album">Album</label>
            <select name="track[album_id]" id="album">
                <% @album.band.albums.each do |a| %>
                    <option value="<%= a.id %>" <%= "selected" if @album == a %>>
                        <%= a.title %>
                    </option>
                <% end %>
            </select>
        </div>
        <div class="flex">
            <label for="ord">Ord</label>
            <input type="number" id="ord" name="track[ord]">
        </div>
        <div class="flex">
            <label for="standard">Standard</label>
            <input type="radio" name="track[bonus]" value="false" checked>
            <label for="bonus">Bonus</label>
            <input type="radio" name="track[bonus]" value="true">
        </div>
        <div class="flex">
            <label for="lyrics">Lyrics</label>
            <textarea name="track[lyrics]" id="lyrics" cols="30" rows="10"></textarea>
        </div>
        <input type="submit" value="Submit Query" class="button submit">
    </form>
</main>